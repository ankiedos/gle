LOR: // lhs rhs LOR  ((lhs << 1)&rhs != 0) ? 255 : 128
// FF  FF  FF   FF
// FF  80  FF   FF
// 80  FF  FF   FF
// 80  80  80   80

LAND: // lhs rhs  lhs&rhs
// FF  FF      FF
// FF  80      80
// 80  FF      80
// 80  80      80

LXOR: // lhs rhs lhs^rhs lhs^rhs+0x80
// FF  FF    00     80
// FF  80    7F     FF
// 80  FF    7F     FF
// 80  80    00     80
// LXOR is a BXOR+128!

LNOT: // lhs lhs^FF+80
// FF  80
// 80  FF

